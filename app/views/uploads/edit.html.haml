%h3 Edit Upload

= form_for @u, path: upload_path(@u)  do |f|
  .entry
    = f.label :description
    = f.text_field :description
    - errors_for(@u,:description)
  .entry
    = f.label :submit, style: 'visibility: hidden'
    = f.submit
    = link_to 'Cancel', uploads_path, class: 'cancel_btn'

- if @u.upl_file_content_type =~ /pdf\Z/i
  %embed{src: @u.upl_file.url(:original), width: '200', height: '200', alt: 'pdf', pluginspage: 'http://www.adobe.com/products/acrobat/readstep2.html'}
- else
  = image_tag @u.upl_file.url(:original), class: 'attachment', width: 200, height: 200




