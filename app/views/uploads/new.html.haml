%h3 Create New Upload


= form_for @u, method: :post, html: {multipart: true}  do |f|
  %p Only Image and PDF files are accepted!
  .entry
    = f.label :up_file, 'File'
    = f.file_field :upl_file
    - errors_for(@u,:upl_file)
  .entry
    = f.label :description
    = f.text_field :description
    - errors_for(@u,:description)
  .entry
    = f.label :submit, style: 'visibility: hidden'
    = f.submit
    = link_to 'Cancel', uploads_path, class: 'cancel_btn'
